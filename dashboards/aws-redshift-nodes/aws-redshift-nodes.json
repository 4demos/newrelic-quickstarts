            "widgets": [
                {
                    "title": "CPU utilization",
                    "layout": {
                        "height": 3,
                        "width": 4,
                        "row": 1,
                        "column": 1
                    },
                    "visualization": {
                        "id": "viz.line"
                    },
                    "rawConfiguration": {
                        "nrqlQueries": [
                            {
                                "accountId": 0,
                                "query": "SELECT average(`aws.redshift.CPUUtilization.byNode`) FROM Metric FACET `aws.redshift.NodeID` SINCE 6 hour AGO TIMESERIES 1 minute UNTIL 5 minutes ago"
                            }
                        ]
                    }
                },
